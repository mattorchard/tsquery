{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types/"]
  },
  "exclude": ["./node_modules/*", "./dist/*", "./examples/*"]
}
